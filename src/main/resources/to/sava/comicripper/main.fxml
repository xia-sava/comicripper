<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="to.sava.comicripper.MainController"
            fx:id="pane"
>
    <top>
        <ToolBar prefHeight="40.0" BorderPane.alignment="CENTER">
            <Label text="作者:"/>
            <TextField fx:id="author" prefWidth="160"/>
            <Region prefWidth="8"/>
            <Label text="題名:"/>
            <TextField fx:id="title" prefWidth="256"/>
            <Region prefWidth="16"/>
            <Button mnemonicParsing="false" text="Button" fx:id="button"/>
            <Label fx:id="label"/>
        </ToolBar>
    </top>
    <center>
        <FlowPane fx:id="comicList" BorderPane.alignment="CENTER" hgap="2" vgap="2"/>
    </center>
</BorderPane>
