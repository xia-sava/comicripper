<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="to.sava.comicripper.controller.DetailController"
            fx:id="detailScene"
            stylesheets="@common.css"
>
    <top>
        <ToolBar prefHeight="40.0" minHeight="40.0">
            <Label text="作者:"/>
            <TextField fx:id="author" prefWidth="100"/>
            <Label text="題名:"/>
            <TextField fx:id="title" prefWidth="200"/>

            <Pane HBox.hgrow="ALWAYS"/>
            <TextField fx:id="isbn" prefWidth="100"/>
            <Button text="ISBN検索" fx:id="searchIsbn"/>
            <fx:include source="parts/separator.fxml"/>
            <Button text="OCR" fx:id="ocrIsbn"/>
            <fx:include source="parts/separator.fxml"/>
            <Button text="表紙カット" fx:id="cutter"/>
            <fx:include source="parts/separator.fxml"/>
            <Button text="ZIP作成" fx:id="zip"/>
        </ToolBar>
    </top>
    <center>
        <ImageView fx:id="imageView"/>
    </center>
    <bottom>
        <ToolBar fx:id="bottomBar" prefHeight="32.0" minHeight="32.0">
            <Button fx:id="leftButton" text="◀"/>
            <fx:include source="parts/separator.fxml"/>
            <StackPane HBox.hgrow="ALWAYS">
                <Slider fx:id="slider" showTickMarks="true" snapToTicks="true"
                        majorTickUnit="1.0" minorTickCount="0" />
                <HBox alignment="CENTER" mouseTransparent="true">
                    <Label fx:id="currentNumber"/>
                    <Label text="/"/>
                    <Label fx:id="pageNumber"/>
                </HBox>
            </StackPane>
            <fx:include source="parts/separator.fxml"/>
            <Button fx:id="rightButton" text="▶"/>
        </ToolBar>
    </bottom>
</BorderPane>
